<?xml version="1.0" encoding="UTF-8"?>

<persistence version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
<persistence-unit name="trackerApp" transaction-type="JTA">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <jta-data-source>Postgresql_DB</jta-data-source>
    <properties>

        <property name="tomee.jpa.factory.lazy" value="true" />

        <property name="hibernate.archive.autodetection" value="class"/>
        <property name="hibernate.dialect" value="org.hibernate.spatial.dialect.postgis.PostgisPG95Dialect"/>
        <property name="connection_pool_size" value="250"/>
        <!--<property name="hibernate.hbm2ddl.auto" value="update" />-->
        <property name="hibernate.show_sql" value="true" />
    </properties>
</persistence-unit>
</persistence>
